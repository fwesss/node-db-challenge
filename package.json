{
  "name": "node-db-challenge",
  "version": "1.0.0",
  "repository": "https://github.com/fwesss/node-db-challenge.git",
  "license": "MIT",
  "author": "Westley Feller <feller.westley@gmail.com>",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "check-format": "yarn run prettier --ignore-path .gitignore --list-different",
    "format": "yarn run prettier --ignore-path .gitignore --write \"**/*.+(js|json|css|md|mdx|html)\"",
    "lint": "eslint --ext .js .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|js)\"",
    "server": "nodemon --experimental-modules --es-module-specifier-resolution=node index.js",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "express": "^4.17.1",
    "folktale": "^2.3.2",
    "knex": "^0.20.3",
    "morgan": "^1.9.1",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "knex-cleaner": "^1.3.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.39.0"
  },
  "engines": {
    "node": "13.3.0"
  }
}
